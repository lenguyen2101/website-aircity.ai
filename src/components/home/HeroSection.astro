---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<section class="relative min-h-[90vh] flex items-center pt-4 overflow-hidden">
  <!-- Dynamic Background Grid -->
  <div class="absolute inset-0 z-0 pointer-events-none">
    <div
      class="absolute top-0 left-0 w-full h-full opacity-10"
      style="background-size: 80px 80px; background-image: linear-gradient(to right, var(--grid-color) 1px, transparent 1px), linear-gradient(to bottom, var(--grid-color) 1px, transparent 1px);"
    >
    </div>
    <div
      class="absolute top-0 left-0 w-full h-full bg-gradient-to-b from-dark-950/20 via-dark-950/50 to-dark-950"
    >
    </div>
  </div>

  <div
    class="container-tech relative z-10 grid lg:grid-cols-12 gap-12 items-center"
  >
    <!-- Left: Content -->
    <div class="lg:col-span-7 space-y-8">
      <div
        class="inline-flex items-center gap-2 px-3 py-1 bg-primary-500/10 border border-primary-500/20 rounded-sm"
      >
        <div class="w-1.5 h-1.5 bg-primary-500 animate-pulse"></div>
        <span class="text-xs font-mono text-primary-400 tracking-wide uppercase"
          >{t("home.hero.system_status")}</span
        >
      </div>

      <h1
        class="font-bold text-primary leading-[1.1] tracking-tighter text-4xl lg:text-5xl"
      >
        {t("home.hero.title_p1")}{" "}
        <span class="gradient-text">{t("home.hero.title_p2")}</span>
        <br />
        {t("home.hero.title_p3")}
      </h1>

      <p
        class="text-xl text-secondary max-w-xl border-l-[3px] border-primary-500 pl-6 leading-relaxed"
      >
        {t("home.hero.desc")}
      </p>

      <div class="flex flex-wrap gap-4 pt-4">
        <a href={translatePath("/services")} class="btn-primary group">
          <span class="shine"></span>
          <span>{t("home.hero.cta_deploy")}</span>
          <span class="font-mono text-xs opacity-70 group-hover:opacity-100"
            >{"->"}</span
          >
        </a>
        <a href={translatePath("/about")} class="btn-secondary group">
          <span>{t("home.hero.cta_docs")}</span>
        </a>
      </div>

      <!-- Metrics -->
      <div class="grid grid-cols-3 gap-8 pt-8 border-t border-white/5">
        <div>
          <div
            class="text-3xl font-bold font-mono text-primary tracking-tighter"
          >
            99.9%
          </div>
          <div
            class="text-[10px] text-secondary uppercase font-bold tracking-[0.2em] mt-1"
          >
            {t("home.stats.uptime")}
          </div>
        </div>
        <div>
          <div
            class="text-3xl font-bold font-mono text-primary tracking-tighter"
          >
            150+
          </div>
          <div
            class="text-[10px] text-secondary uppercase font-bold tracking-[0.2em] mt-1"
          >
            {t("home.stats.nodes")}
          </div>
        </div>
        <div>
          <div
            class="text-3xl font-bold font-mono text-primary tracking-tighter"
          >
            0.3s
          </div>
          <div
            class="text-[10px] text-secondary uppercase font-bold tracking-[0.2em] mt-1"
          >
            {t("home.stats.latency")}
          </div>
        </div>
      </div>
    </div>

    <!-- Right: Visual AI Building -->
    <div class="lg:col-span-5 relative hidden lg:block">
      <div class="relative group">
        <!-- Decoration -->
        <div
          class="absolute -inset-4 bg-primary-500/10 blur-3xl rounded-full opacity-50 group-hover:opacity-80 transition-opacity"
        >
        </div>

        <!-- Image Container -->
        <div
          class="relative aspect-[4/5] rounded-3xl overflow-hidden glass-card border-white/10 shadow-2xl"
        >
          <img
            src="/images/hero-smart-city.png"
            alt="AI-Powered Smart City Platform"
            class="w-full h-full object-cover scale-105 group-hover:scale-110 transition-transform duration-700"
          />

          <!-- UI Overlay Aesthetic -->
          <div
            class="absolute inset-0 bg-gradient-to-t from-dark-950 via-transparent to-transparent opacity-60"
          >
          </div>

          <div
            class="absolute top-6 left-6 right-6 flex justify-between items-start"
          >
            <div
              class="px-3 py-1.5 rounded-lg bg-dark-950/80 backdrop-blur-md border border-white/10 font-mono text-[10px] text-primary-400"
            >
              SYS_ANALYSIS: ACTIVE
            </div>
            <div
              class="w-12 h-12 rounded-full bg-primary-500/10 backdrop-blur-md border border-primary-500/30 flex items-center justify-center"
            >
              <div class="w-1.5 h-1.5 bg-primary-400 rounded-full animate-ping">
              </div>
            </div>
          </div>

          <div
            class="absolute bottom-6 left-6 right-6 p-4 rounded-xl bg-dark-950/80 backdrop-blur-md border border-white/10"
          >
            <div class="flex items-center gap-3 mb-2">
              <div class="w-2 h-2 rounded-full bg-green-500"></div>
              <div
                class="text-[10px] font-mono text-slate-300 uppercase tracking-widest"
              >
                Building Neural Network
              </div>
            </div>
            <div class="h-1 w-full bg-white/5 rounded-full overflow-hidden">
              <div
                class="h-full bg-primary-500 w-2/3 animate-[pulse_2s_infinite]"
              >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

