---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../../i18n/utils";
import LanguagePicker from "./LanguagePicker.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
const currentPath = Astro.url.pathname;

const navItems = [
  { label: t("nav.home"), href: translatePath("/") },
  { label: t("nav.about"), href: translatePath("/about") },
  { label: t("nav.services"), href: translatePath("/services") },
  { label: t("nav.blog"), href: translatePath("/blog") },
  { label: t("nav.contact"), href: translatePath("/contact") },
];
---

<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-50 h-20 bg-dark-black/80 backdrop-blur-md border-b border-white/5 transition-all duration-300"
>
  <div
    class="h-full max-w-[1280px] mx-auto px-6 flex items-center justify-between"
  >
    <!-- Logo -->
    <a href={translatePath("/")} class="flex items-center gap-2 group">
      <div class="relative w-8 h-8 flex items-center justify-center">
        <img
          src="/logo.png"
          alt="AirCity Logo"
          class="w-full h-full object-contain"
        />
      </div>
      <span
        class="text-xl font-bold font-heading tracking-tight text-primary group-hover:text-primary-400 transition-colors"
      >
        AirCity
      </span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex items-center gap-8">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              "text-sm font-mono font-bold uppercase tracking-widest transition-colors duration-200",
              currentPath === item.href
                ? "text-primary-400"
                : "text-secondary hover:text-primary",
            ]}
          >
            {item.label}
          </a>
        ))
      }
    </nav>

    <div class="hidden lg:flex items-center gap-8">
      <LanguagePicker />

      <!-- CTA Button -->
      <a
        href={translatePath("/contact")}
        class="btn-primary py-2 px-5 text-sm h-10"
      >
        {t("nav.cta") || "Liên hệ tư vấn"}
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-btn"
      class="lg:hidden p-2 text-secondary hover:text-primary"
      aria-label="Toggle menu"
    >
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="3" y1="12" x2="21" y2="12"></line>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <line x1="3" y1="18" x2="21" y2="18"></line>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-x-0 top-20 bottom-0 z-40 transform translate-x-full transition-transform duration-300 pointer-events-none data-[open=true]:translate-x-0 data-[open=true]:pointer-events-auto border-t border-white/10 backdrop-blur-xl"
    style="background-color: rgba(2, 4, 8, 0.95); height: calc(100dvh - 5rem);"
  >
    <div
      class="p-6 flex flex-col gap-6 h-full overflow-y-auto overscroll-contain pb-safe"
    >
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="text-lg font-mono font-bold text-secondary hover:text-primary border-b border-white/5 pb-4"
          >
            {item.label}
          </a>
        ))
      }

      <div
        class="mt-4 flex justify-between items-center border-b border-white/5 pb-4"
      >
        <span class="text-secondary">{t("nav.language" as any)}</span>
        <LanguagePicker />
      </div>

      <a
        href={translatePath("/contact")}
        class="btn-primary w-full justify-center mt-4 shrink-0"
      >
        {t("nav.cta") || "Liên hệ tư vấn"}
      </a>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  let isMenuOpen = false;

  menuBtn?.addEventListener("click", () => {
    isMenuOpen = !isMenuOpen;
    if (mobileMenu) {
      mobileMenu.setAttribute("data-open", isMenuOpen.toString());
      // Lock body scroll
      document.body.style.overflow = isMenuOpen ? "hidden" : "";
    }
  });
</script>
