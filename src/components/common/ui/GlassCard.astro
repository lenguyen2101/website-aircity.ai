---
interface Props {
    className?: string;
}

const { className = "" } = Astro.props;
---

<div
    class:list={[
        "relative overflow-hidden backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl transition-all duration-300 hover:border-white/20 hover:bg-white/10 group",
        className,
    ]}
>
    <div
        class="absolute inset-0 bg-gradient-to-br from-primary-500/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
    >
    </div>
    <div class="relative z-10">
        <slot />
    </div>
</div>
