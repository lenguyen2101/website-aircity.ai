---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 — Trang không tìm thấy">
  <section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-dark-950 via-dark-900 to-dark-950"></div>
      <div class="grid-pattern"></div>
    </div>

    <div class="section-container relative z-10 text-center">
      <div class="text-8xl md:text-9xl font-bold gradient-text mb-6" style="font-family: var(--font-family-heading);">
        404
      </div>
      <h1 class="text-2xl md:text-3xl font-bold text-white mb-4">
        Trang không tìm thấy
      </h1>
      <p class="text-slate-400 text-lg mb-10 max-w-md mx-auto">
        Trang bạn đang tìm kiếm không tồn tại hoặc đã được di chuyển.
      </p>
      <a href="/" class="btn-primary">
        <span>Về trang chủ</span>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="relative z-10">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
