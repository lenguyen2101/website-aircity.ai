---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { companyInfo } from "../../data/navigation";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout
    title="Contact | AirCity"
    description="Contact AirCity to deploy intelligent building management systems."
>
    <section class="pt-12 pb-32 relative overflow-hidden">
        <!-- Background Grid -->
        <div class="absolute inset-0 z-0 pointer-events-none">
            <div
                class="absolute top-0 left-0 w-full h-full bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:40px_40px]"
            >
            </div>
        </div>

        <div class="container-tech relative z-10">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
                <!-- Left Column: Context -->
                <div class="space-y-8">
                    <div
                        class="inline-flex items-center gap-2 px-2 py-1 bg-primary-500/10 border border-primary-500/20 text-xs font-mono text-primary-400"
                    >
                        {t("contact.hero.badge")}
                    </div>

                    <h1
                        class="text-4xl lg:text-5xl font-bold leading-[1.1] tracking-tighter"
                    >
                        {t("contact.hero.title_p1")}{" "}
                        <span class="gradient-text"
                            >{t("contact.hero.title_p2")}</span
                        >
                    </h1>

                    <p
                        class="text-slate-400 text-lg border-l-2 border-primary-900 pl-6"
                    >
                        {t("contact.hero.desc")}
                    </p>

                    <div class="space-y-4 pt-8">
                        <div class="tech-card p-6! flex items-start gap-4">
                            <div class="text-primary-500 mt-1">
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    ><path
                                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <div
                                    class="text-xs font-mono text-slate-500 mb-1"
                                >
                                    {t("contact.info.hotline")}
                                </div>
                                <div class="text-white font-medium text-lg">
                                    {companyInfo.phone}
                                </div>
                            </div>
                        </div>

                        <div class="tech-card p-6! flex items-start gap-4">
                            <div class="text-primary-500 mt-1">
                                <svg
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    ><rect
                                        x="2"
                                        y="4"
                                        width="20"
                                        height="16"
                                        rx="2"></rect><path
                                        d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <div
                                    class="text-xs font-mono text-slate-500 mb-1"
                                >
                                    {t("contact.info.email")}
                                </div>
                                <div class="text-white font-medium text-lg">
                                    {companyInfo.email}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Form -->
                <div>
                    <div class="tech-card bg-dark-900/80 backdrop-blur-sm">
                        <form id="contact-form" class="space-y-6">
                            <div class="grid md:grid-cols-2 gap-6">
                                <div class="space-y-2">
                                    <label
                                        for="name"
                                        class="font-mono text-xs text-slate-400"
                                        >{t("contact.form.name")}</label
                                    >
                                    <input
                                        type="text"
                                        id="name"
                                        name="name"
                                        required
                                        class="input-tech"
                                        placeholder={t(
                                            "contact.form.name_placeholder"
                                        )}
                                    />
                                </div>
                                <div class="space-y-2">
                                    <label
                                        for="phone"
                                        class="font-mono text-xs text-slate-400"
                                        >{t("contact.form.phone")}</label
                                    >
                                    <input
                                        type="tel"
                                        id="phone"
                                        name="phone"
                                        required
                                        class="input-tech"
                                        placeholder={t(
                                            "contact.form.phone_placeholder"
                                        )}
                                    />
                                </div>
                            </div>

                            <div class="space-y-2">
                                <label
                                    for="email"
                                    class="font-mono text-xs text-slate-400"
                                    >{t("contact.form.email")}</label
                                >
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="input-tech"
                                    placeholder={t(
                                        "contact.form.email_placeholder"
                                    )}
                                />
                            </div>

                            <div class="space-y-2">
                                <label
                                    for="service"
                                    class="font-mono text-xs text-slate-400"
                                    >{t("contact.form.module")}</label
                                >
                                <select
                                    id="service"
                                    name="service"
                                    class="input-tech appearance-none"
                                >
                                    <option value=""
                                        >{
                                            t("contact.form.module_placeholder")
                                        }</option
                                    >
                                    <option value="smart-building"
                                        >{t("contact.form.module_opt1")}</option
                                    >
                                    <option value="face-id"
                                        >{t("contact.form.module_opt2")}</option
                                    >
                                    <option value="iot"
                                        >{t("contact.form.module_opt3")}</option
                                    >
                                    <option value="consulting"
                                        >{t("contact.form.module_opt4")}</option
                                    >
                                </select>
                            </div>

                            <div class="space-y-2">
                                <label
                                    for="message"
                                    class="font-mono text-xs text-slate-400"
                                    >{t("contact.form.message")}</label
                                >
                                <textarea
                                    id="message"
                                    name="message"
                                    rows="4"
                                    class="input-tech resize-none"
                                    placeholder={t(
                                        "contact.form.message_placeholder"
                                    )}></textarea>
                            </div>

                            <!-- Honeypot (hidden from humans, traps bots) -->
                            <div
                                class="absolute opacity-0 pointer-events-none"
                                style="position:absolute;left:-9999px;"
                                aria-hidden="true"
                            >
                                <input
                                    type="text"
                                    name="_honey"
                                    tabindex="-1"
                                    autocomplete="off"
                                />
                            </div>

                            <button
                                type="submit"
                                class="btn-primary w-full justify-center mt-4"
                            >
                                <span>{t("contact.form.submit")}</span>
                                <svg
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    class="animate-pulse"
                                >
                                    <line x1="22" y1="2" x2="11" y2="13"></line>
                                    <polygon points="22 2 15 22 11 13 2 9 22 2"
                                    ></polygon>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<script>
    const form = document.getElementById("contact-form") as HTMLFormElement;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const btn = form.querySelector(
            'button[type="submit"]'
        ) as HTMLButtonElement;
        const originalContent = btn.innerHTML;
        const originalClasses = btn.className;

        // Loading state
        btn.disabled = true;
        btn.className =
            "w-full py-4 px-6 rounded-lg bg-dark-800 border border-cyan-500/30 text-white font-mono text-sm flex items-center justify-center gap-3 cursor-wait transition-all duration-300";
        btn.innerHTML = `
            <svg class="animate-spin h-5 w-5 text-cyan-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Sending...</span>
        `;

        try {
            // Collect form data
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            // Send to API
            const response = await fetch("/api/contact", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data),
            });

            if (!response.ok) throw new Error("Failed to send");

            // Success state
            btn.className =
                "w-full py-4 px-6 rounded-lg bg-gradient-to-r from-dark-800 to-cyan-950 border border-cyan-500/40 text-white font-mono text-sm flex items-center justify-center gap-3 transition-all duration-300";
            btn.innerHTML = `
                <svg class="h-5 w-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-white">Sent successfully!</span>
            `;

            // Reset after 3 seconds
            setTimeout(() => {
                btn.innerHTML = originalContent;
                btn.className = originalClasses;
                btn.disabled = false;
                form.reset();
            }, 3000);
        } catch (err) {
            // Error state
            btn.className =
                "w-full py-4 px-6 rounded-lg bg-gradient-to-r from-dark-800 to-red-950 border border-red-500/40 text-white font-mono text-sm flex items-center justify-center gap-3 transition-all duration-300";
            btn.innerHTML = `
                <svg class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span class="text-white">Something went wrong. Please try again.</span>
            `;

            setTimeout(() => {
                btn.innerHTML = originalContent;
                btn.className = originalClasses;
                btn.disabled = false;
            }, 3000);
        }
    });
</script>
