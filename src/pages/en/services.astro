---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getServices } from '../../data/services';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const tp = useTranslatedPath(lang);
const services = getServices(lang);

const iconPaths: Record<string, string> = {
  'building': '<path d="M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18Z"/><path d="M6 12H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2"/><path d="M18 9h2a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-2"/><path d="M10 6h4"/><path d="M10 10h4"/><path d="M10 14h4"/><path d="M10 18h4"/>',
  'scan-face': '<path d="M3 7V5a2 2 0 0 1 2-2h2"/><path d="M17 3h2a2 2 0 0 1 2 2v2"/><path d="M21 17v2a2 2 0 0 1-2 2h-2"/><path d="M7 21H5a2 2 0 0 1-2-2v-2"/><circle cx="12" cy="10" r="3"/><path d="M7 20c0-2 1-3.5 5-3.5s5 1.5 5 3.5"/>',
  'smartphone': '<rect width="14" height="20" x="5" y="2" rx="2" ry="2"/><path d="M12 18h.01"/>',
  'cpu': '<rect x="4" y="4" width="16" height="16" rx="2"/><rect x="9" y="9" width="6" height="6"/><path d="M15 2v2"/><path d="M15 20v2"/><path d="M2 15h2"/><path d="M2 9h2"/><path d="M20 15h2"/><path d="M20 9h2"/><path d="M9 2v2"/><path d="M9 20v2"/>',
  'credit-card': '<rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/>',
  'lightbulb': '<path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"/><path d="M9 18h6"/><path d="M10 22h4"/>',
};
---

<BaseLayout title={t('services.meta.title' as any)} description={t('services.meta.desc' as any)}>
  <!-- Page Hero -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-dark-950 via-dark-900 to-dark-950"></div>
      <div class="grid-pattern"></div>
      <div class="absolute top-1/3 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-primary-500/8 rounded-full blur-[120px]"></div>
    </div>

    <div class="section-container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="animate-reveal inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-accent-cyan/10 border border-accent-cyan/20 mb-6">
          <span class="text-accent-cyan text-xs font-semibold uppercase tracking-wider">{t('services.hero.badge')}</span>
        </div>
        <h1 class="animate-reveal text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6" style="animation-delay: 0.1s;">
          {t('services.hero.title_p1')} <span class="gradient-text">{t('services.hero.title_p2')}</span><br />
          {t('services.hero.title_p3')}
        </h1>
        <p class="animate-reveal text-slate-400 text-lg leading-relaxed" style="animation-delay: 0.2s;">
          {t('services.hero.desc')}
        </p>
      </div>
    </div>
  </section>

  <!-- Services Detail -->
  <section class="section-padding relative">
    <div class="section-container">
      <div class="space-y-24">
        {services.map((service, index) => (
          <div id={service.id} class="scroll-mt-24">
            <div class={`grid lg:grid-cols-2 gap-16 items-center ${index % 2 === 1 ? 'lg:direction-rtl' : ''}`}>
              <!-- Content -->
              <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
                <div class="animate-reveal inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-primary-500/10 border border-primary-500/20 mb-6">
                  <span class="text-primary-400 text-xs font-semibold uppercase tracking-wider">0{index + 1}</span>
                </div>

                <h2 class="animate-reveal text-3xl md:text-4xl font-bold text-white mb-6" style="animation-delay: 0.1s;">
                  {service.title}
                </h2>

                <p class="animate-reveal text-slate-400 text-lg leading-relaxed mb-8" style="animation-delay: 0.2s;">
                  {service.description}
                </p>

                <ul class="space-y-4">
                  {service.features.map((feature, fi) => (
                    <li class="animate-reveal flex items-center gap-3" style={`animation-delay: ${0.1 * (fi + 3)}s;`}>
                      <div class="w-8 h-8 rounded-lg bg-primary-500/10 border border-primary-500/20 flex items-center justify-center shrink-0">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary-400">
                          <polyline points="20 6 9 17 4 12"/>
                        </svg>
                      </div>
                      <span class="text-slate-300">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Visual Card -->
              <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
                <div class="animate-reveal glass-card p-12 flex items-center justify-center min-h-[300px]">
                  <div class="w-32 h-32 rounded-3xl bg-primary-500/10 border border-primary-500/20 flex items-center justify-center animate-[pulse-glow_3s_ease-in-out_infinite]">
                    <svg
                      width="64"
                      height="64"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="text-primary-400"
                      set:html={iconPaths[service.icon] || ''}
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="relative py-32 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-dark-950 via-primary-950/20 to-dark-950"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[300px] bg-primary-500/8 rounded-full blur-[120px]"></div>
    </div>
    <div class="section-container relative z-10 text-center">
      <h2 class="animate-reveal text-3xl md:text-4xl font-bold text-white mb-6">
        {t('services.cta.title_p1')} <span class="gradient-text">{t('services.cta.title_p2')}</span>
      </h2>
      <p class="animate-reveal text-slate-400 text-lg mb-10 max-w-2xl mx-auto" style="animation-delay: 0.1s;">
        {t('services.cta.desc')}
      </p>
      <div class="animate-reveal" style="animation-delay: 0.2s;">
        <a href={tp('/contact')} class="btn-primary text-base px-10 py-4">
          <span>{t('services.cta.button')}</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="relative z-10">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
