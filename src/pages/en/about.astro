---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Section from "../../components/common/ui/Section.astro";
import Container from "../../components/common/ui/Container.astro";
import SectionTitle from "../../components/common/ui/SectionTitle.astro";
import Reveal from "../../components/common/ui/Reveal.astro";
import GlassCard from "../../components/common/ui/GlassCard.astro";
import Investors from "../../components/common/Investors.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const teamMembers = [
  { id: 1, image: "/images/team/nhat-le.jpeg" },
  { id: 2, image: "/images/team/steven-le.png" },
  { id: 3, image: "/images/team/emre-sigura.jpeg" },
  { id: 4, image: "/images/team/chi-do.jpeg" },
  { id: 5, image: "/images/team/nguyen-le.png" },
  { id: 6, image: "/images/team/thi-tran.jpeg" },
];
---

<BaseLayout
  title={t('about.meta.title' as any)}
  description={t('about.meta.desc' as any)}
>
  <!-- Page Hero -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0">
      <div
        class="absolute inset-0 bg-gradient-to-b from-dark-950 via-dark-900 to-dark-950"
      >
      </div>
      <div class="grid-pattern"></div>
      <div
        class="absolute top-1/3 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-primary-500/8 rounded-full blur-[120px]"
      >
      </div>
    </div>

    <Container className="relative z-10">
      <SectionTitle
        badge={t('about.hero.badge' as any)}
        title={t('about.hero.title' as any)}
        subtitle={t('about.hero.subtitle' as any)}
        align="center"
        as="h1"
      />
    </Container>
  </section>

  <!-- Our Story & Stats -->
  <Section className="relative overflow-hidden">
    <div slot="background" class="absolute top-1/2 right-0 -translate-y-1/2 w-1/2 h-full opacity-10 pointer-events-none z-0 hidden md:block">
      <img
        src="/images/smart-city-tech.png"
        alt=""
        class="w-full h-full object-cover"
      />
    </div>

    <div class="grid lg:grid-cols-12 gap-12 lg:gap-20 items-center relative z-10">
      <!-- Left Column: Story -->
      <div class="lg:col-span-7">
        <SectionTitle
          title={`${t('about.story.title' as any)} <span class="gradient-text">AirCity</span>`}
          align="left"
          className="mb-8"
        />
        <div class="space-y-6 text-slate-400 text-lg leading-relaxed">
          <Reveal delay={0.1}>
            <p>
              {t('about.story.p1' as any)}
            </p>
          </Reveal>
          <Reveal delay={0.2}>
            <p>
              {t('about.story.p2_prefix' as any)} <span
                class="text-white font-semibold">{t('about.story.p2_buildings' as any)}</span
              > {t('about.story.p2_mid' as any)}
              <span class="text-primary-400 font-semibold"
                >{t('about.story.p2_residents' as any)}</span
              >.
            </p>
          </Reveal>
          <Reveal delay={0.3}>
            <p>
              {t('about.story.p3_prefix' as any)} <span
                class="text-white font-medium italic">{t('about.story.p3_award' as any)}</span
              > {t('about.story.p3_suffix' as any)}
            </p>
          </Reveal>
        </div>
      </div>

      <!-- Right Column: Tech Stats Grid -->
      <div class="lg:col-span-5 relative">
        <!-- Decorative Frame -->
        <div
          class="absolute -inset-4 border border-primary-500/10 rounded-3xl pointer-events-none hidden lg:block"
        >
        </div>

        <div class="grid grid-cols-2 gap-4">
          {
            [
              {
                value: "2019",
                label: t('about.stats.founded'),
                tag: ".STARTUP",
                delay: 0.1,
              },
              {
                value: "150+",
                label: t('about.stats.buildings'),
                tag: ".INFRA",
                delay: 0.2,
              },
              {
                value: "50+",
                label: t('about.stats.experts'),
                tag: ".TALENT",
                delay: 0.3,
              },
              {
                value: "24/7",
                label: t('about.stats.uptime'),
                tag: ".SUPPORT",
                delay: 0.4,
              },
            ].map((item) => (
              <Reveal delay={item.delay}>
                <GlassCard className="p-6 h-full relative group overflow-hidden border-white/5! hover:border-primary-500/30! transition-all">
                  <div class="absolute top-0 right-0 p-2 opacity-20 group-hover:opacity-100 transition-opacity">
                    <div class="text-[10px] font-mono text-primary-400 uppercase tracking-tighter">
                      {item.tag}
                    </div>
                  </div>
                  <div class="text-4xl font-bold text-white mb-2 font-mono tracking-tighter">
                    {item.value}
                  </div>
                  <p class="text-slate-500 text-[10px] uppercase font-bold tracking-widest leading-tight">
                    {item.label}
                  </p>
                  <!-- Scanner Line Effect -->
                  <div class="absolute bottom-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-primary-500/50 to-transparent translate-x-full group-hover:animate-[scan-x_2s_linear_infinite]" />
                </GlassCard>
              </Reveal>
            ))
          }
        </div>
      </div>
    </div>
  </Section>

  <!-- Mission & Vision -->
  <Section className="relative">
    <div slot="background" class="absolute inset-0">
      <div
        class="absolute bottom-0 left-1/4 w-[500px] h-[400px] bg-accent-purple/5 rounded-full blur-[120px]"
      >
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-8 relative z-10">
      <!-- Mission -->
      <Reveal className="h-full">
        <GlassCard className="p-10 h-full">
          <div
            class="w-14 h-14 rounded-xl bg-primary-500/10 border border-primary-500/20 flex items-center justify-center mb-6"
          >
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-primary-400"
            >
              <circle cx="12" cy="12" r="10"></circle><path
                d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path><path
                d="M2 12h20"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">{t('about.mission.title' as any)}</h3>
          <p class="text-slate-400 leading-relaxed">
            {t('about.mission.desc' as any)}
          </p>
        </GlassCard>
      </Reveal>

      <!-- Vision -->
      <Reveal delay={0.15} className="h-full">
        <GlassCard className="p-10 h-full">
          <div
            class="w-14 h-14 rounded-xl bg-accent-cyan/10 border border-accent-cyan/20 flex items-center justify-center mb-6"
          >
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-accent-cyan"
            >
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"
              ></path><circle cx="12" cy="12" r="3"></circle>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">{t('about.vision.title' as any)}</h3>
          <p class="text-slate-400 leading-relaxed">
            {t('about.vision.desc' as any)}
          </p>
        </GlassCard>
      </Reveal>
    </div>
  </Section>

  <!-- Team Section -->
  <Section className="relative overflow-hidden">
    <div slot="background" class="absolute inset-0">
      <div
        class="absolute top-1/2 right-1/4 w-[600px] h-[500px] bg-primary-500/5 rounded-full blur-[140px]"
      >
      </div>
    </div>

    <SectionTitle
      badge={t('about.team.badge')}
      title={t('about.team.title')}
      align="center"
      className="mb-16"
    />

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 relative z-10">
      {
        teamMembers.map((member, index) => (
          <Reveal delay={index * 0.1} className="h-full">
            <div class="group relative h-full">
              <GlassCard className="p-0 overflow-hidden border-white/5! hover:border-primary-500/30! transition-all duration-500 h-full flex flex-col">
                <!-- Avatar with hover zoom -->
                <div class="relative aspect-[4/5] overflow-hidden">
                  <img
                    src={member.image}
                    alt={t(`about.team.member${member.id}.name` as any)}
                    class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-105 transition-all duration-700 ease-out"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-dark-950 via-dark-950/20 to-transparent opacity-60 group-hover:opacity-40 transition-opacity" />
                  
                  <!-- Corner Accent -->
                  <div class="absolute top-4 right-4 w-8 h-8 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-500 translate-x-4 group-hover:translate-x-0">
                    <div class="w-full h-full border-t-2 border-r-2 border-primary-500/50" />
                  </div>
                </div>

                <!-- Info -->
                <div class="px-8 pt-6 pb-8 relative">
                   <!-- Floating Badge decoration -->
                  <div class="absolute -top-4 right-8 bg-primary-500 px-3 py-1 rounded-sm skew-x-[-12deg] opacity-0 group-hover:opacity-100 transition-all duration-500 translate-y-2 group-hover:translate-y-0">
                    <div class="text-[10px] font-mono font-bold text-white skew-x-[12deg] tracking-widest uppercase">
                      EXPERT
                    </div>
                  </div>

                  <h4 class="text-xl font-bold text-white mb-2 group-hover:text-primary-400 transition-colors">
                    {t(`about.team.member${member.id}.name` as any)}
                  </h4>
                  <p class="text-primary-500 font-mono text-xs uppercase tracking-[0.15em] font-medium">
                    {t(`about.team.member${member.id}.role` as any)}
                  </p>
                  
                  <!-- Bio fragment decoration -->
                  {t(`about.team.member${member.id}.desc` as any) && (
                    <div class="mt-4 pt-4 border-t border-white/5">
                      <p class="text-slate-500 text-xs leading-relaxed italic">
                        &quot;{t(`about.team.member${member.id}.desc` as any)}&quot;
                      </p>
                    </div>
                  )}
                </div>
              </GlassCard>
            </div>
          </Reveal>
        ))
      }
    </div>
  </Section>

  <!-- Core Values -->
  <Section>
    <SectionTitle
      title={`${t('about.values.title_prefix' as any)} <span class="gradient-text">${t('about.values.title_highlight' as any)}</span>`}
    />

    <div class="grid md:grid-cols-3 gap-6">
      <Reveal delay={0.1} className="h-full">
        <GlassCard className="p-8 text-center h-full">
          <div
            class="w-16 h-16 rounded-2xl bg-primary-500/10 border border-primary-500/20 flex items-center justify-center mx-auto mb-6"
          >
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              class="text-primary-400"
            >
              <path
                d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('about.values.innovation' as any)}</h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            {t('about.values.innovation_desc' as any)}
          </p>
        </GlassCard>
      </Reveal>

      <Reveal delay={0.2} className="h-full">
        <GlassCard className="p-8 text-center h-full">
          <div
            class="w-16 h-16 rounded-2xl bg-accent-cyan/10 border border-accent-cyan/20 flex items-center justify-center mx-auto mb-6"
          >
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              class="text-accent-cyan"
            >
              <path
                d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"
                stroke-linecap="round"
                stroke-linejoin="round"></path><circle cx="9" cy="7" r="4"
              ></circle><path
                d="M23 21v-2a4 4 0 0 0-3-3.87"
                stroke-linecap="round"
                stroke-linejoin="round"></path><path
                d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('about.values.partnership' as any)}</h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            {t('about.values.partnership_desc' as any)}
          </p>
        </GlassCard>
      </Reveal>

      <Reveal delay={0.3} className="h-full">
        <GlassCard className="p-8 text-center h-full">
          <div
            class="w-16 h-16 rounded-2xl bg-accent-emerald/10 border border-accent-emerald/20 flex items-center justify-center mx-auto mb-6"
          >
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              class="text-accent-emerald"
            >
              <path
                d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{t('about.values.trust' as any)}</h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            {t('about.values.trust_desc' as any)}
          </p>
        </GlassCard>
      </Reveal>
    </div>
  </Section>
  <Investors />
</BaseLayout>
